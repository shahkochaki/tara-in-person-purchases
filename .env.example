# Tara API Configuration
# فایل نمونه متغیرهای محیطی برای سرویس تارا

# Base URL - آدرس پایه API
# For staging: https://stage.tara-club.ir/club/api/v1
# For production: https://api.tara-club.ir/club/api/v1
TARA_BASE_URL=https://stage.tara-club.ir/club/api/v1

# Authentication Credentials - اطلاعات احراز هویت
# IMPORTANT: Replace with your actual credentials - مهم: با اطلاعات واقعی خود جایگزین کنید
TARA_USERNAME=your_username_here
TARA_PASSWORD=your_password_here

# Default Branch Code - کد شعبه پیش‌فرض
TARA_BRANCH_CODE=your_branch_code_here

# Environment - محیط
# Options: staging, production
TARA_ENVIRONMENT=staging

# Timeout Settings - تنظیمات زمان انقضا (ثانیه)
TARA_CONNECT_TIMEOUT=30
TARA_REQUEST_TIMEOUT=60

# Token Settings - تنظیمات توکن
TARA_TOKEN_BUFFER=60
TARA_AUTO_REFRESH_TOKEN=true

# Logging Settings - تنظیمات لاگ
TARA_LOGGING_ENABLED=true
TARA_LOG_LEVEL=info
TARA_LOG_CHANNEL=default

# Additional Headers - هدرهای اضافی
TARA_COOKIE="SERVER_USED=srv2"

# Retry Settings - تنظیمات تکرار درخواست
TARA_RETRY_ENABLED=true
TARA_MAX_RETRY_ATTEMPTS=3
TARA_RETRY_DELAY=1000

# Legacy Support (for backward compatibility)
TARA_LOGGING=true